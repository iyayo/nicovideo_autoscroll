{
  "name": "ニコニコ動画 自動スクロール",
  "version": "1.2",
  "manifest_version": 2,
  "description": "動画ページを開いたとき、設定した位置に自動でスクロールする拡張機能",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "browser_action": {
    "default_icon" : {
      "16" : "icon/icon16.png",
      "32" : "icon/icon32.png"
    },
    "default_title": "クリックでスクロール"
  },
  "content_scripts": [
    {
      "js": ["js/script.js"],
      "matches": ["https://www.nicovideo.jp/watch/*"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  }
}
