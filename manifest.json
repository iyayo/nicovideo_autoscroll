{
  "name": "ニコニコ動画 自動スクロール",
  "version": "1.6",
  "manifest_version": 3,
  "description": "動画ページを開いたときに、設定した位置に自動でスクロールする拡張機能です。",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "action": {
    "default_icon" : {
      "16" : "icon/icon16.png",
      "32" : "icon/icon32.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "ニコニコ動画 自動スクロール"
  },
  "content_scripts": [
    {
      "js": ["js/script.js"],
      "matches": ["https://www.nicovideo.jp/watch/*"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ]
}
